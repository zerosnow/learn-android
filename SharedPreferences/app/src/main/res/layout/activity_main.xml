<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="String:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textString"
        android:textSize="30dp" />

    <TextView
        android:text="Integer:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textInteger"
        android:layout_below="@+id/textString"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <TextView
        android:text="Long:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLong"
        android:layout_below="@+id/textInteger"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <TextView
        android:text="Float:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textFloat"
        android:layout_below="@+id/textLong"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editString"
        android:layout_alignBottom="@+id/textString"
        android:layout_toRightOf="@+id/textString" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editInteger"
        android:layout_alignBottom="@+id/textInteger"
        android:layout_toRightOf="@+id/textInteger" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editLong"
        android:layout_alignBottom="@+id/textLong"
        android:layout_toRightOf="@+id/textLong" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editFloat"
        android:layout_alignBottom="@+id/textFloat"
        android:layout_toRightOf="@+id/textFloat" />

    <TextView
        android:text="Boolean:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textBoolean"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textFloat"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/textBoolean"
        android:layout_toRightOf="@+id/textBoolean">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是"
            android:id="@+id/radioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="否"
            android:id="@+id/radioButton2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:id="@+id/radioButton3" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/write"
        android:text="写入"
        android:layout_below="@+id/textBoolean"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/read"
        android:text="读取"
        android:layout_alignBottom="@+id/write"
        android:layout_toRightOf="@+id/write"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reload"
        android:text="重置"
        android:layout_alignBottom="@+id/read"
        android:layout_toRightOf="@+id/read"
        android:layout_marginLeft="20dp" />

</RelativeLayout>
