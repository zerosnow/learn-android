<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/user_base_paddingx"
        android:layout_marginRight="@dimen/user_base_paddingx"
        android:layout_marginStart="@dimen/user_base_paddingy"
        android:layout_marginTop="@dimen/user_base_paddingy"
        android:layout_marginBottom="@dimen/user_base_paddingy"
        android:layout_marginEnd="@dimen/user_base_paddingy">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="@dimen/user_base_margin"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/user_base_margin">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_header"
                    android:layout_width="@dimen/user_head_pic_hw"
                    android:layout_height="@dimen/user_head_pic_hw"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/profile"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/user_head_nickname_hw"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/primary_text"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/user_base_margin"
                    android:layout_marginEnd="@dimen/user_base_margin"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/user_head_pic_hw"
                    android:layout_toRightOf="@id/iv_header"
                    android:layout_toEndOf="@id/iv_header"
                    android:layout_marginStart="@dimen/user_base_margin"
                    android:layout_marginLeft="@dimen/user_base_margin"
                    android:layout_toLeftOf="@id/tv_time"
                    android:layout_toStartOf="@id/tv_time"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:gravity="center_vertical"/>
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_picture"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:layout_margin="@dimen/user_base_margin"
                    android:background="@drawable/ca_fab_icon_photos"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/guide_point1_on"/>
                <ImageView
                    android:id="@+id/iv_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_like"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/guide_point2_on"/>
                <ImageView
                    android:id="@+id/iv_shared"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/guide_point3_on"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_likeNum"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="bottom"
                android:text="0次赞"
                android:textSize="24dp"
                android:textColor="@color/material_drawer_primary_dark"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/user_base_margin">
                <TextView
                    android:id="@+id/tv_commentName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/material_drawer_primary_dark"/>
                <TextView
                    android:id="@+id/tv_comment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_toRightOf="@id/tv_commentName1"
                    android:layout_toEndOf="@id/tv_commentName1"
                    android:layout_marginStart="@dimen/user_base_margin"
                    android:layout_marginLeft="@dimen/user_base_margin"
                    android:textColor="@color/material_drawer_primary_dark"/>
                <TextView
                    android:id="@+id/tv_commentName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@id/tv_commentName1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/material_drawer_primary_dark"/>
                <TextView
                    android:id="@+id/tv_comment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_toRightOf="@id/tv_commentName2"
                    android:layout_toEndOf="@id/tv_commentName2"
                    android:layout_below="@id/tv_comment1"
                    android:layout_marginStart="@dimen/user_base_margin"
                    android:layout_marginLeft="@dimen/user_base_margin"
                    android:textColor="@color/material_drawer_primary_dark"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>